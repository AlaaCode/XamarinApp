<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App4.AjouterFiliere">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="nom" Placeholder="Nom Filiere"/>
            <Entry x:Name="resp" Placeholder="Responsable"/>
            <DatePicker x:Name="date" />

            <Button Text="Ajouter"  BackgroundColor="#2196F3" 
                    Clicked="Enregistrer_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>